<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_more_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_more_arrow_dark"/>
        <LinearLayout
            android:padding="8dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_category_title"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="开胃"/>
            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="眼球和味蕾一个也不放过"
                android:layout_below="@id/tv_category_title"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_vp_placeholder"
        android:layout_width="match_parent"
        android:layout_height="340dp"/>
    <com.example.zjy.niklauslibrary.widget.vpindicator.TabView
        android:layout_gravity="center"
        android:id="@+id/vp_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/divider"/>
</LinearLayout>